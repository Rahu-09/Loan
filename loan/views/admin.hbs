    <script>let counter = 0;
        function debounce(text) {
            let timeout;
            return setTimeout(() => {
                var xhttp = new XMLHttpRequest();
                xhttp.onreadystatechange = function () {
                    if (this.readyState == 4) {
                        document.getElementById('recordbody').innerHTML = "";
                        this.records = xhttp.records;
                        let html = ``;
                        let rowIndex = 0;
                        for (let record of JSON.parse(xhttp.responseText).records) {
                            let tr = document.createElement('tr');

                            let th = document.createElement('th');
                            let strong = document.createElement('strong');
                            let p = document.createElement('p');
                            let t = document.createTextNode(rowIndex);
                            p.appendChild(t);
                            strong.appendChild(p);
                            th.appendChild(strong);
                            tr.appendChild(th)

                            th = document.createElement('th');
                            strong = document.createElement('strong');
                            p = document.createElement('p');
                            t = document.createTextNode(record.contactName);
                            p.appendChild(t);
                            strong.appendChild(p);
                            th.appendChild(strong);
                            tr.appendChild(th)

                            th = document.createElement('th');
                            strong = document.createElement('strong');
                            p = document.createElement('p');
                            t = document.createTextNode(record.mobileNumber);
                            p.appendChild(t);
                            strong.appendChild(p);
                            th.appendChild(strong);
                            tr.appendChild(th)

                            th = document.createElement('th');
                            strong = document.createElement('strong');
                            p = document.createElement('p');
                            t = document.createTextNode(record.currentLocation);
                            p.appendChild(t);
                            strong.appendChild(p);
                            th.appendChild(strong);
                            tr.appendChild(th)

                            th = document.createElement('th');
                            strong = document.createElement('strong');
                            p = document.createElement('p');
                            t = document.createTextNode(record.loanAmount);
                            p.appendChild(t);
                            strong.appendChild(p);
                            th.appendChild(strong);
                            tr.appendChild(th)

                            th = document.createElement('th');
                            strong = document.createElement('strong');
                            p = document.createElement('p');
                            t = document.createTextNode(record.residenceType);
                            p.appendChild(t);
                            strong.appendChild(p);
                            th.appendChild(strong);
                            tr.appendChild(th)

                            th = document.createElement('th');
                            strong = document.createElement('strong');
                            p = document.createElement('p');
                            t = document.createTextNode(record.eType);
                            p.appendChild(t);
                            strong.appendChild(p);
                            th.appendChild(strong);
                            tr.appendChild(th)

                            th = document.createElement('th');
                            strong = document.createElement('strong');
                            p = document.createElement('p');
                            t = document.createTextNode(record.companyName);
                            p.appendChild(t);
                            strong.appendChild(p);
                            th.appendChild(strong);
                            tr.appendChild(th)

                            th = document.createElement('th');
                            strong = document.createElement('strong');
                            p = document.createElement('p');
                            t = document.createTextNode(record.monthlyIncome);
                            p.appendChild(t);
                            strong.appendChild(p);
                            th.appendChild(strong);
                            tr.appendChild(th)

                            th = document.createElement('th');
                            strong = document.createElement('strong');
                            p = document.createElement('p');
                            t = document.createTextNode(record.modeofSalary);
                            p.appendChild(t);

                            strong.appendChild(p);
                            th.appendChild(strong);
                            tr.appendChild(th)
                            document.getElementById('recordbody').appendChild(tr);
                            ++rowIndex;
                        }
                    }
                }
                if (text == undefined || text == null || text == "") {
                    text = "EMPTY";
                }
                xhttp.open("POST", `http://localhost:3000/admin/${text}`, true);
                xhttp.send();
            }, 100, text);
        };</script>
    <script>

        $(document).ready(function () {
            document.getElementById("register").disabled = true;
            $('input[type="checkbox"]').click(function () {
                if ($(this).is(":checked")) {
                    document.getElementById("register").disabled = false;
                }
                else if ($(this).is(":not(:checked)")) {
                    document.getElementById("register").disabled = true;
                }
            });
        });

    </script>
</head>

